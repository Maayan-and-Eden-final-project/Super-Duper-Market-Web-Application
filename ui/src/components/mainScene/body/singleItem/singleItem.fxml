<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<ScrollPane fitToHeight="true" fitToWidth="true" minHeight="90.0" styleClass="information-scroll"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.mainScene.body.singleItem.SingleItemController">
   <content>
      <GridPane hgap="10.0" styleClass="information-grid" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
          <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints vgrow="ALWAYS" />
          <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
        </rowConstraints>
         <children>
            <Label fx:id="itemIdLabel" styleClass="information-label" text="Id:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="itemIdValue" styleClass="information-value" text="Label" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label fx:id="itemNameLabel" styleClass="information-label" text="Name:" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label fx:id="itemNameValue" styleClass="information-value" text="Label" GridPane.columnIndex="4" GridPane.rowIndex="1" />
            <Label fx:id="purchaseCategoryLabel" styleClass="information-label" text="Purchase Category:" GridPane.columnIndex="5" GridPane.rowIndex="1" />
            <Label fx:id="purchaseCategoryValue" styleClass="information-value" text="Label" GridPane.columnIndex="6" GridPane.rowIndex="1" />
            <Label fx:id="sellingStoresLabel" styleClass="information-label" text="Number Of Selling Stores:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="sellingStoresValue" styleClass="information-value" text="Label" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="averagePriceLabel" styleClass="information-label" text="Average Price:" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Label fx:id="averagePriceValue" styleClass="information-value" text="Label" GridPane.columnIndex="4" GridPane.rowIndex="2" />
            <Label fx:id="amountSoldLabel" styleClass="information-label" text="Amount Sold:" GridPane.columnIndex="5" GridPane.rowIndex="2" />
            <Label fx:id="amountSoldValue" styleClass="information-value" text="Label" GridPane.columnIndex="6" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </content>
</ScrollPane>
