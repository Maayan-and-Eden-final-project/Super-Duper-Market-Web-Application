<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.mainScene.body.addDiscount.addOffer.AddOfferController">
   <children>
      <Label fx:id="offerLabel" styleClass="information-label" text="Offer: " />
      <ComboBox fx:id="itemIdComboBox" minWidth="-Infinity" onAction="#itemIdComboBoxAction" prefWidth="150.0" promptText="Item">
         <styleClass>
            <String fx:value="combo-box-popup" />
            <String fx:value="updateComboBox" />
         </styleClass>
      </ComboBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <TextField fx:id="amountTextField" onMouseExited="#offerAmountAction" promptText="Amount" />
            <Label fx:id="amountMessage" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <TextField fx:id="forAdditional" onMouseExited="#forAdditionalAction" promptText="For Additional" />
            <Label fx:id="forAdditionalMessage" />
         </children>
      </VBox>
   </children>
</HBox>
