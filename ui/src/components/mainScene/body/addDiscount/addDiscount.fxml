<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.mainScene.body.addDiscount.AddDiscountController">
   <children>
      <HBox spacing="15.0">
         <children>
            <ComboBox fx:id="chooseStoreComboBox" minWidth="-Infinity" onAction="#chooseStoreAction" prefWidth="150.0" promptText="Choose Store">
               <styleClass>
                  <String fx:value="combo-box-popup" />
                  <String fx:value="updateComboBox" />
               </styleClass>
            </ComboBox>
            <TextField fx:id="discountNameTextField" disable="true" promptText="Discount Name" />
         </children>
      </HBox>
      <HBox fx:id="ifYouBuyHbox" disable="true" spacing="15.0">
         <children>
            <Label fx:id="ifYouBuyLable" styleClass="information-label" text="If You Buy: " />
            <ComboBox fx:id="chooseItemComboBox" minWidth="-Infinity" prefWidth="150.0" promptText="Choose Item">
               <styleClass>
                  <String fx:value="combo-box-popup" />
                  <String fx:value="updateComboBox" />
               </styleClass>
            </ComboBox>
            <TextField fx:id="amountTextField" promptText="Amount" />
            <Label fx:id="ifYouBuyMessage" />
         </children>
      </HBox>
      <HBox fx:id="thenYouGetHbox" disable="true" spacing="15.0">
         <children>
            <Label fx:id="thenYouGetLabel" styleClass="information-label" text="Then You Get: " />
            <ComboBox fx:id="operatorComboBox" minWidth="-Infinity" onAction="#operatorAction" prefWidth="150.0" promptText="Operator">
               <styleClass>
                  <String fx:value="combo-box-popup" />
                  <String fx:value="updateComboBox" />
               </styleClass>
            </ComboBox>
         </children>
      </HBox>
      <VBox fx:id="offerVbox" disable="true" spacing="10.0">
         <children>
            <fx:include fx:id="offerComponent" source="addOffer/addOffer.fxml" />
            <Label fx:id="offerNumberValue" />
         </children>
      </VBox>
      <HBox fx:id="buttonsHbox" alignment="TOP_RIGHT" disable="true" spacing="15.0">
         <children>
            <Button fx:id="plusOfferButton" disable="true" mnemonicParsing="false" onAction="#plusOfferAction" styleClass="menuButton" text="+ Offer" />
            <Button fx:id="addDiscountButton" disable="true" mnemonicParsing="false" onAction="#addDiscountAction" styleClass="menuButton" text="Add Discount" />
         </children>
      </HBox>
   </children>
</VBox>
